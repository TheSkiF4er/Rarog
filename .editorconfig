# .editorconfig — единые правила редактора для репозитория Rarog
# Автор: TheSkiF4er
# Цель: обеспечить консистентный стиль (отступы, кодировка, окончания строк) в монорепо
# Документация: https://editorconfig.org

root = true

# Общие настройки
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 100

# Markdown — допускаем длинные строки и не трогаем пробелы в конце (для списков)
[*.md]
trim_trailing_whitespace = false
max_line_length = off
insert_final_newline = true
charset = utf-8

# Текстовые файлы (README, LICENSE и т.д.)
[*.{txt,md,adoc,rst}]
trim_trailing_whitespace = false
max_line_length = off

# JSON — форматированные файлы, двойные кавычки
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# YAML — обычно отступ 2 пробела
[*.{yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 160

# Shell скрипты — табуляция не используется
[*.{sh,bash}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

# Dockerfile — небольшие файлы, соблюдаем LF
[Dockerfile]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# HTML / XML
[*.{html,htm,xml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 160

# CSS / SCSS / SASS
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 180

# JavaScript / TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
charset = utf-8

# Node / config scripts (js) — разрешаем короткие строки для конфигов
[*.config.{js,cjs,mjs}]
indent_style = space
indent_size = 2
max_line_length = 180

# Python
[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100
charset = utf-8

# Go
[*.go]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# Java / Kotlin
[*.{java,kt,kts}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# C / C++ / Header
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# C#
[*.{cs}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# Ruby
[*.rb]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# Terraform
[*.tf]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 160

# Binary / generated — не применять правила
[*.{png,jpg,jpeg,gif,ico,zip,tar,woff,woff2,ttf,eot,pdf}]
trim_trailing_whitespace = false
insert_final_newline = false

# Исключения для директорий
# node_modules и сборки — нет редактирования
[node_modules/**]
trim_trailing_whitespace = false
insert_final_newline = false

[dist/**]
trim_trailing_whitespace = false
insert_final_newline = false

# Конец файла
