{
  "name": "@rarog/js",
  "version": "0.1.0",
  "description": "Vanilla JS утилиты Rarog — компактные, доступные и zero-deps helpers (Dropdown, Modal, FocusTrap и пр.).",
  "author": "TheSkiF4er",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheSkiF4er/rarog.git"
  },
  "keywords": [
    "rarog",
    "javascript",
    "vanilla",
    "a11y",
    "modal",
    "dropdown",
    "focus-trap",
    "ui"
  ],
  "engines": {
    "node": ">=18"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "dev": "ts-node --transpile-only src/index.ts",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "test": "vitest run --reporter=dot || true",
    "prepublishOnly": "npm run build && npm run test"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.0.0",
    "ts-node": "^10.9.1",
    "rimraf": "^5.0.0",
    "eslint": "^8.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
