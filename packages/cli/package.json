{
  "name": "@rarog/cli",
  "version": "0.1.0",
  "description": "CLI для Rarog — управление темами, сборкой и документацией. Полнофункциональный инструмент для разработчиков.",
  "author": "TheSkiF4er",
  "license": "Apache-2.0",
  "homepage": "https://github.com/TheSkiF4er/rarog",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheSkiF4er/rarog.git"
  },
  "keywords": [
    "rarog",
    "cli",
    "theme",
    "docs",
    "build",
    "design-system",
    "css-framework"
  ],
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "rarog": "bin/rarog",
    "@rarog/cli": "bin/rarog"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "bin/",
    "src/",
    "scripts/",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc -p tsconfig.build.json",
    "build:bin": "chmod +x bin/rarog || true",
    "build": "npm run clean && npm run build:ts && npm run build:bin",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "lint": "eslint 'src/**/*.{ts,js}' --max-warnings=0",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix",
    "test": "vitest run --reporter dot || true",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test"
  },
  "dependencies": {
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "tsconfig-paths": "^4.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
