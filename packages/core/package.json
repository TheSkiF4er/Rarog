{
  "name": "@rarog/core",
  "version": "0.1.0",
  "description": "Ядро Rarog — токены, базовые утилиты и компоненты CSS (Dual Token Grid).",
  "author": "TheSkiF4er",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheSkiF4er/rarog.git"
  },
  "keywords": [
    "rarog",
    "css",
    "design-system",
    "tokens",
    "theme",
    "utility"
  ],
  "engines": {
    "node": ">=16"
  },
  "main": "dist/rarog.css",
  "style": "dist/rarog.css",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "rarog.config.js"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:css": "sass --no-source-map src/index.scss dist/rarog.css --style=expanded",
    "build:css:min": "sass --no-source-map src/index.scss dist/rarog.min.css --style=compressed",
    "build:post": "postcss dist/rarog.css --dir dist --config ../../../../postcss.config.cjs",
    "build": "npm run clean && npm run build:css && npm run build:post && npm run build:css:min",
    "dev": "sass --watch src/index.scss:dist/rarog.css",
    "lint:scss": "stylelint 'src/**/*.scss' --syntax scss",
    "format": "prettier --write 'src/**/*.{scss,css}'",
    "test": "echo \"No tests for CSS package (add visual/regression tests)\"",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "postcss": "^8.4.0"
  },
  "devDependencies": {
    "sass": "^1.70.0",
    "postcss-cli": "^10.1.0",
    "autoprefixer": "^10.4.0",
    "stylelint": "^14.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {},
  "publishConfig": {
    "access": "public"
  }
}
